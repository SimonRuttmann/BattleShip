<AnchorPane fx:id="anchorPane" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.GamePlayground">
   <children>
      <VBox alignment="CENTER" stylesheets="@../Stylesheets/DefaultTheme.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <AnchorPane prefHeight="50.0">
               <children>
                  <HBox prefHeight="50.0" prefWidth="1280.0">
                     <children>
                        <Button fx:id="buttonShowSaveBar" mnemonicParsing="false" onAction="#showSaveBar" prefHeight="50.0" prefWidth="150.0" text="Save Game">
                           <HBox.margin>
                              <Insets left="5.0" />
                           </HBox.margin>
                        </Button>
                        <Line fx:id="lineLeftSide" endY="50.0">
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin>
                        </Line>
                        <StackPane fx:id="sP_RectangleAndElements" prefHeight="50.0" prefWidth="580.0">
                           <children>
                              <Rectangle fx:id="rectangle" arcHeight="5.0" arcWidth="5.0" fill="#c9c9c9" height="40.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="400.0" StackPane.alignment="TOP_LEFT">
                                 <StackPane.margin>
                                    <Insets bottom="5.0" top="5.0" />
                                 </StackPane.margin>
                              </Rectangle>
                              <HBox fx:id="hBox_SaveTextfieldButton" prefHeight="40.0" prefWidth="580.0">
                                 <StackPane.margin>
                                    <Insets bottom="5.0" top="5.0" />
                                 </StackPane.margin>
                                 <children>
                                    <TextField fx:id="saveGameText" prefHeight="40.0" prefWidth="200.0" promptText="Enter the save name here">
                                       <HBox.margin>
                                          <Insets bottom="5.0" left="20.0" top="5.0" />
                                       </HBox.margin>
                                    </TextField>
                                    <Button fx:id="saveAndCloseButton" mnemonicParsing="false" onAction="#saveAndCloseGame" prefHeight="41.0" prefWidth="96.0" text="Save and Close">
                                       <HBox.margin>
                                          <Insets bottom="5.0" left="10.0" top="5.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                        </StackPane>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </AnchorPane>
            <VBox VBox.vgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                     <children>
                        <AnchorPane HBox.hgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" layoutY="5.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0">
                                 <children>
                                    <HBox alignment="CENTER">
                                       <children>
                                          <Label fx:id="ownFieldLabel" alignment="CENTER" text="Own Playground" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER" fillHeight="false">
                                       <children>
                                          <Group fx:id="groupOwnP">
                                             <children>
                                                <GridPane fx:id="ownField" alignment="CENTER">
                                                  <columnConstraints>
                                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="30.0" />
                                                  </columnConstraints>
                                                  <rowConstraints>
                                                    <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                                  </rowConstraints>
                                                   <padding>
                                                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                                   </padding>
                                                   <cursor>
                                                      <Cursor fx:constant="DEFAULT" />
                                                   </cursor>
                                                </GridPane>
                                             </children>
                                          </Group>
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                        <Separator orientation="VERTICAL" />
                        <AnchorPane HBox.hgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" layoutY="5.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0">
                                 <children>
                                    <HBox alignment="CENTER">
                                       <children>
                                          <Label fx:id="enemyFieldLabel" alignment="CENTER" text="Enemy Playground" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER" fillHeight="false">
                                       <children>
                                          <Group fx:id="groupEnemP">
                                             <children>
                                                <GridPane fx:id="enemyField" alignment="CENTER">
                                                  <columnConstraints>
                                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="30.0" />
                                                  </columnConstraints>
                                                  <rowConstraints>
                                                    <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                                  </rowConstraints>
                                                   <padding>
                                                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                                   </padding>
                                                   <cursor>
                                                      <Cursor fx:constant="CROSSHAIR" />
                                                   </cursor>
                                                </GridPane>
                                             </children>
                                          </Group>
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                     </children>
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                  </HBox>
               </children>
            </VBox>
            <AnchorPane prefHeight="50.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
