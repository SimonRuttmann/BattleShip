<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox prefHeight="400.0" prefWidth="600.0" stylesheets="@../Stylesheets/DefaultTheme.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.GameConfig">
   <children>
      <AnchorPane prefHeight="50.0">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#backToLastScene" text="Zurück" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0" />
         </children>
      </AnchorPane>
      <HBox alignment="CENTER">
         <children>
            <Label text="Spieleinstellungen">
               <font>
                  <Font size="35.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER_RIGHT" spacing="13.0">
               <children>
                  <Label text="Spielername" />
                  <Label text="Spielfeldgröße" />
                  <Label text="Gesamtzahl Schiffe" />
                  <Label text="2er Schiffe" />
                  <Label text="3er Schiffe" />
                  <Label text="4er Schiffe" />
                  <Label text="5er Schiffe" />
               </children>
            </VBox>
            <Pane prefWidth="10.0" />
            <VBox alignment="CENTER_LEFT" spacing="3.0">
               <children>
                  <TextField fx:id="playerName" editable="false" promptText="Nickname eingeben" />
                  <Spinner fx:id="fieldSize" prefWidth="70.0" />
                  <Spinner fx:id="numberOfShips" prefWidth="70.0" />
                  <Spinner fx:id="number2Ships" prefWidth="70.0" />
                  <Spinner fx:id="number3Ships" prefWidth="70.0" />
                  <Spinner fx:id="number4Ships" prefWidth="70.0" />
                  <Spinner fx:id="number5Ships" prefWidth="70.0" />
               </children>
            </VBox>
         </children>
      </HBox>
      <AnchorPane prefHeight="50.0">
         <children>
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#startGame" prefHeight="27.0" prefWidth="48.0" text="Start" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0" />
         </children>
      </AnchorPane>
   </children>
</VBox>
